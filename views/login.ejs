<% include ./partials/header.ejs %>
    <div class="container">
        <br><br>
        <form class="center-align" method="post" action="/login">
            <div class="row ">
                <div class="col s8 offset-s2 ">
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="lname" type="text" class="validate" name="loginName">
                            <label for="lname">Login Id</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="password" type="password" class="validate" name="loginPass">
                            <label for="password">Password</label>
                        </div>
                    </div>
                </div>

            </div>
            <button type="reset" class="btn white-text blue"> Reset <i class="material-icons right">refresh</i></button>
            <button type="submit" class="btn white-text green"> Submit <i class="material-icons right">send</i></button>

        </form>
        <br>
        <form class="center-align" method="post" action="/login">
            <input  type="hidden" class="validate" name="loginName" value="guest">
            <input  type="hidden" class="validate" name="loginPass" value="guest">
            <button type="submit" class="btn white-text green"> Use it Guest <i class="material-icons right">send</i></button>
    </div>

